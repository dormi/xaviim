  src: url('<%= asset_path "xaviim.eot" %>');
  src: url('<%= asset_path "xaviim.woff#iefix" %>') format('embedded-opentype'),
       url('<%= asset_path "xaviim.woff" %>') format('woff2'),
       url('<%= asset_path "xaviim.woff" %>') format('woff'),
       url('<%= asset_path "xaviim.ttf" %>') format('truetype'),
       url('<%= asset_path "xaviim.woff#xaviim" %>') format('svg');
  font-weight: normal;
  font-style: normal;
}
